# Environment variables for Big D's Tree Service Backend

# LLM selection
# If LLM_PROVIDER is not set, app prefers OpenAI when OPENAI_API_KEY exists, else falls back to MiniMax.
LLM_PROVIDER=openai
LLM_MODEL=gpt-5.1

# LLM tuning (latency/cost controls)
LLM_MAX_MESSAGES=8
LLM_MAX_COMPLETION_TOKENS=650
LLM_TEMPERATURE=0.3

# OpenAI (used when provider=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5.1

# MiniMax (used when provider=minimax)
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_BASE_URL=https://api.minimax.io/v1
MINIMAX_MODEL=MiniMax-M2.5

# App
APP_URL=http://localhost:3001
UPLOAD_DIR=./uploads

# Owner notification
OWNER_EMAIL=shipithon@gmail.com

# Twilio (optional - mock mode if not set)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+12625551234

# Scheduling
CALENDLY_LINK=https://calendly.com/bigdstrees/appointment

# Zapier
ZAPIER_LEAD_WEBHOOK_URL=your_zapier_webhook_url
ENABLE_ZAPIER_LEAD_FLOW=true
ENABLE_NATIVE_NOTIFICATIONS=false
ENABLE_HUBSPOT_SYNC=false

# Email (optional - console log if not set)
# RESEND_API_KEY=your_resend_api_key
